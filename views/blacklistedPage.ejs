<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css" />

    <link rel="stylesheet" href="css/blacklistedPage.css" />
    <script src="js/blacklistedPage.js" defer></script>
    <title>Blacklisted</title>
  </head>
  <body>
    <h1 class="text-center mb-4">
      Blacklisted Clubs
      <div class="dropdown">
    <div class="dropdown">
      <button class="btn btn-link user-icon-btn dropdown-toggle" type="button" id="userDropdown"
        data-bs-toggle="dropdown" aria-expanded="false">
        <i class="bi bi-person-circle"></i>
      </button>
      <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
        <li><a class="dropdown-item" href="#" data-bs-toggle="modal" data-bs-target="#profileModal">Profiel</a></li>
        <li>
          <hr class="dropdown-divider">
        </li>
        <li><a class="dropdown-item" href="Quiz-Page">Game Pagina</a></li>

        <li>
          <a class="dropdown-item" href="favorieten">Favoriete Clubs</a>
        </li>
        <li>
          <a class="dropdown-item" href="favorieteleagues">Favoriete League</a>
        </li>
        <li>
          <a class="dropdown-item" href="blacklistedPage">Blacklisted Clubs</a>
        </li>
        <li>
          <hr class="dropdown-divider" />
        </li>
        <li>
          <form action="/logout" method="POST" class="d-inline">
            <button type="submit" class="dropdown-item">Uitloggen</button>
          </form>
        </li>
      </ul>
    </div>
    </h1>
     <div class="container mt-5">
    <div class="mb-3">
      <input type="text" id="clubNameInput" class="form-control" placeholder="Zoek club op naam..." />
      <ul id="searchResults" class="list-group mt-2"></ul>
    </div>
<% if (clubs.length === 0) { %>
  <div class="alert alert-danger text-center" id="emptyMessage">Je hebt geen blacklisted clubs.</div>
<% } %>
  <div id="blacklistClubList" class="list-group">
    <% clubs.forEach(club => { %>
      <div class="list-group-item d-flex align-items-center justify-content-between">
  <div class="d-flex align-items-center">
    <img src="<%= club.crest %>" alt="<%= club.name %>" class="me-3" width="60" height="60">
    <strong class="fs-5"><%= club.name %></strong>
  </div>

  <form action="/api/blacklist/update/<%= club.id %>" method="POST" class="d-flex align-items-center justify-content-center" style="flex: 1;">
    <input type="text" name="reason" class="form-control me-2" value="<%= club.reason %>" style="max-width: 300px;">
    <button type="submit" class="btn btn-secondary">Update reden</button>
  </form>

  <form action="/api/blacklist/delete/<%= club.id %>" method="POST">
    <button type="submit" class="btn btn-danger">Verwijder</button>
  </form>
</div>

    <% }) %>
  </div>


    <div id="blacklistClubList" class="list-group"></div>
  </div>
    <div
      class="modal fade"
      id="profileModal"
      tabindex="-1"
      aria-labelledby="profileModalLabel"
      aria-hidden="true"
    >
      <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="profileModalLabel">Profielgegevens</h5>
            <button
              type="button"
              class="btn-close"
              data-bs-dismiss="modal"
              aria-label="Sluiten"
            ></button>
          </div>
          <div class="modal-body">
            <div class="container">
              <div class="row">
                <div class="col-md-6">
                  <div class="mb-3">
                    <label for="profileUsername" class="form-label"
                      >Gebruikersnaam:</label
                    >
                    <input
                      type="text"
                      class="form-control"
                      id="profileUsername"
                      value="TestTest12"
                      readonly
                    />
                  </div>
                  <div class="mb-3">
                    <label for="profileEmail" class="form-label">Email:</label>
                    <input
                      type="email"
                      class="form-control"
                      id="profileEmail"
                      value="Test@Test.com"
                      readonly
                    />
                  </div>
                </div>
                <div class="col-md-6">
                  <div class="mb-3">
                    <label for="profilePassword" class="form-label"
                      >Wachtwoord:</label
                    >
                    <input
                      type="password"
                      class="form-control"
                      id="profilePassword"
                      value="**********"
                      readonly
                    />
                  </div>
                </div>
              </div>
            </div>
          </div>
          <div class="modal-footer">
            <button id="editProfileBtn" type="button" class="btn btn-secondary">
              Bewerken
            </button>
            <button
              id="cancelProfileBtn"
              type="button"
              class="btn btn-danger"
              style="display: none"
            >
              Annuleren
            </button>
            <button
              id="saveProfileBtn"
              type="button"
              class="btn"
              style="display: none"
            >
              Opslaan
            </button>
          </div>
        </div>
      </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
