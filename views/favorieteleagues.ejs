<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="css/favorieteleagues.css" />
    <script src="js/favorieteleagues.js" defer></script>
    <title>FavorieteLeague</title>
  </head>
  <body>
    <h1 class="text-center mb-4">
      Favoriete League
<%- include('partials/profileModal') %>
      <div
        class="modal fade"
        id="profileModal"
        tabindex="-1"
        aria-labelledby="profileModalLabel"
        aria-hidden="true"
      >
        <div class="modal-dialog modal-dialog-centered modal-lg">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="profileModalLabel">
                Profielgegevens
              </h5>
              <button
                type="button"
                class="btn-close"
                data-bs-dismiss="modal"
                aria-label="Sluiten"
              ></button>
            </div>
            <div class="modal-body">
              <div class="container">
                <div class="row">
                  <div class="col-md-6">
                    <div class="mb-3">
                      <label for="profileUsername" class="form-label"
                        >Gebruikersnaam:</label
                      >
                      <input
                        type="text"
                        class="form-control"
                        id="profileUsername"
                        value="TestTest12"
                        readonly
                      />
                    </div>
                    <div class="mb-3">
                      <label for="profileEmail" class="form-label"
                        >Email:</label
                      >
                      <input
                        type="email"
                        class="form-control"
                        id="profileEmail"
                        value="Test@Test.com"
                        readonly
                      />
                    </div>
                  </div>
                  <div class="col-md-6">
                    <div class="mb-3">
                      <label for="profilePassword" class="form-label"
                        >Wachtwoord:</label
                      >
                      <input
                        type="password"
                        class="form-control"
                        id="profilePassword"
                        value="**********"
                        readonly
                      />
                    </div>
                  </div>
                </div>
              </div>
            </div>
            <div class="modal-footer">
              <button
                id="editProfileBtn"
                type="button"
                class="btn btn-secondary"
              >
                Bewerken
              </button>
              <button
                id="cancelProfileBtn"
                type="button"
                class="btn btn-danger"
                style="display: none"
              >
                Annuleren
              </button>
              <button
                id="saveProfileBtn"
                type="button"
                class="btn"
                style="display: none"
              >
                Opslaan
              </button>
            </div>
          </div>
        </div>
      </div>
    </h1>

<h2 class="text-center"><%= league ? league.name : "Geen favoriete league geselecteerd" %></h2>

<% if (!league) { %>
  <h2 class="text-center my-4">Selecteer je favoriete league</h2>
  <form action="/favorieteleagues" method="POST" class="text-center">
    <select name="leagueId" class="form-select w-50 mx-auto mb-3" required>
      <option value="">Kies een league</option>
      <% leagues.forEach(l => { %>
        <option value="<%= l.id %>"><%= l.name %> (<%= l.area.name %>)</option>
      <% }) %>
    </select>
    <button type="submit" class="btn btn-success">Opslaan als favoriet</button>
  </form>
<% } else { %>
  <h2 class="text-center my-4"><%= league.name %> - <%= league.area.name %></h2>
  <div class="league text-center">
    <img src="<%= league.emblem %>" alt="<%= league.name %> logo" class="mb-3" width="100">
    <p>Land: <%= league.area.name %></p>
    <p>Aantal clubs: <%= clubs.length %></p>

    <select class="clubsDropdown form-select w-50 mx-auto mb-3">
      <option selected disabled>Clubs...</option>
      <% clubs.forEach(club => { %>
        <option value="<%= club.id %>"><%= club.name %></option>
      <% }) %>
    </select>

    <div id="clubInfo" class="mt-3"></div>
  </div>
<% } %>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
