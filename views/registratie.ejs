<!DOCTYPE html>
<html lang="nl">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Registratie</title>

  <link 
    rel="stylesheet" 
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" 
  />

  <link 
    rel="stylesheet" 
    href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css" 
  />

  <link rel="stylesheet" href="css/registratie.css" />
</head>
<body>
  <nav class="navbar navbar-custom">
    <div class="container-fluid d-flex justify-content-between align-items-center">
      <div class="placeholder"></div>
      <span class="navbar-brand navbar-brand-custom mx-auto">WPL Games</span>
      <div style="width:30px;"></div>
    </div>
  </nav>

  <div class="content-container">
    <div class="registration-box bg-white rounded shadow">
        <img src="Assets/Clubs.png" alt="Clubs foto" class="club-photo mb-3" />

      <h2 class="text-center registration-title mb-4">Registratie</h2>
      <hr class="title-divider mb-4" />

    <% if (typeof error !== 'undefined' && error) { %>
      <div class="alert alert-danger text-center mb-3">
        <%= error %>
      </div>
    <% } %>

    <form id="registrationForm" action="/registratie" method="POST">
      <div class="row">
        <div class="col-md-6 mb-3">
          <label for="regUsername" class="form-label">Gebruikersnaam:</label>
          <input
            type="text"
            class="form-control"
            id="regUsername"
            name="username"
            placeholder="Voer je gebruikersnaam in"
            value="<%= typeof username !== 'undefined' ? username : '' %>"
            >
        </div>
        <div class="col-md-6 mb-3">
          <label for="regEmail" class="form-label">Email:</label>
          <input
            type="email"
            class="form-control"
            id="regEmail"
            name="email"
            placeholder="Voer je email in"
            value="<%= typeof email !== 'undefined' ? email : '' %>"
            >
        </div>
      </div>

      <div class="row">
        <div class="col-md-6">
          <div class="mb-3">
            <label for="regPassword" class="form-label">Wachtwoord:</label>
            <div class="input-group">
              <input type="password" class="form-control" id="regPassword" name="password" placeholder="Voer je wachtwoord in">
              <span class="input-group-text toggle-password" data-target="regPassword">
                <i class="bi bi-eye-slash"></i>
              </span>
            </div>
          </div>
        </div>
      
        <div class="col-md-6">
          <div class="mb-3">
            <label for="regPasswordConfirm" class="form-label">Wachtwoord herhalen:</label>
            <div class="input-group">
              <input type="password" class="form-control" id="regPasswordConfirm" name="passwordConfirm" placeholder="Herhaal je wachtwoord">
              <span class="input-group-text toggle-password" data-target="regPasswordConfirm">
                <i class="bi bi-eye-slash"></i>
              </span>
            </div>
          </div>
        </div>
        </div>

      <div class="row d-none d-md-flex">
        <div class="col-md-6 mb-3">
          <div class="password-requirements mt-3">
            <div class="form-check">
              <input type="checkbox" class="form-check-input" disabled id="req-uppercase">
              <label class="form-check-label" for="req-uppercase">Minstens 1 hoofdletter</label>
            </div>
            <div class="form-check">
              <input type="checkbox" class="form-check-input" disabled id="req-length">
              <label class="form-check-label" for="req-length">Minstens 8 karakters</label>
            </div>
          </div>
        </div>
        <div class="col-md-6 mb-3">
          <div class="password-requirements mt-3">
            <div class="form-check">
              <input type="checkbox" class="form-check-input" disabled id="req-special">
              <label class="form-check-label" for="req-special">Minstens 1 speciaal teken</label>
            </div>
            <div class="form-check">
              <input type="checkbox" class="form-check-input" disabled id="req-digit">
              <label class="form-check-label" for="req-digit">Minstens 1 cijfer</label>
            </div>
          </div>
        </div>
      </div>

      <div class="row d-block d-md-none">
        <div class="col-12 mb-3">
          <div class="password-requirements mt-3">
            <div class="form-check">
              <input type="checkbox" class="form-check-input" disabled id="req-uppercase-mobile">
              <label class="form-check-label" for="req-uppercase-mobile">Minstens 1 hoofdletter</label>
            </div>
            <div class="form-check">
              <input type="checkbox" class="form-check-input" disabled id="req-length-mobile">
              <label class="form-check-label" for="req-length-mobile">Minstens 8 karakters</label>
            </div>
            <div class="form-check">
              <input type="checkbox" class="form-check-input" disabled id="req-special-mobile">
              <label class="form-check-label" for="req-special-mobile">Minstens 1 speciaal teken</label>
            </div>
            <div class="form-check">
              <input type="checkbox" class="form-check-input" disabled id="req-digit-mobile">
              <label class="form-check-label" for="req-digit-mobile">Minstens 1 cijfer</label>
            </div>
          </div>
        </div>
      </div>
          <button type="submit" class="btn registration-btn w-100 mt-3">Registreren</button>
      </form>
      </div>
    </div>

  <script 
    src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"
  ></script>
  <script src="js/registratie.js"></script>
</body>
</html>
